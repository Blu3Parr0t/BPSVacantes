<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.bps.bpsvacademo.ui.fragment1.Fragment1ViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment1.Fragment1">

        <Button
            android:id="@+id/ButtonInFragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Hello from Fragment 1" />

        <Button
            android:id="@+id/Button2InFragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{() -> viewModel.updateBatman()}"
            android:text="Update batman" />

        <TextView
            android:id="@+id/textViewInFragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{viewModel.batman}"
            android:textSize="34dp"
            tools:text="Batman" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Joker!!"
            android:textSize="34dp"
            android:visibility="@{viewModel.isJokerHere ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/henchmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Unleash the Henchmen"
            android:textSize="34dp"
            android:visibility="@{viewModel.isJokerHere ? View.VISIBLE : View.GONE}" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DBName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recruit Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/DBNameTI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@{viewModel.recruitName}"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DBWeapon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weapon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/DBWeaponTI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@{viewModel.recruitWeapon}"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/showRecruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{() -> viewModel.getNewestRecruit()}"
            android:text="Show newest Recruit"/>

    </LinearLayout>
</layout>
